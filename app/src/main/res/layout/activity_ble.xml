<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".user.BLEActivity">

    <Button
        android:text="Get Scanned Bluetooth Devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getBLEBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:enabled="false"/>

    <Button
        android:id="@+id/button_scanBT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scan Bluetooth Devices"
        android:layout_below="@+id/getBLEBtn"
        android:layout_alignParentStart="true"
        android:enabled="false"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/mainListView"
        android:layout_below="@+id/button_scanBT"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"></ListView>

    <Button
        android:text="Take me to my location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_scanBT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="345dp"
        android:id="@+id/goToLocBtn"
        android:onClick="onGoToLocBtnClick"
        android:enabled="false"/>

</RelativeLayout>